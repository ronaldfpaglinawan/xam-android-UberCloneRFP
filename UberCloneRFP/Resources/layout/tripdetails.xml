
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tripdetails_bottomsheet"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@color/uberAsh"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#fff"
        android:padding="16dp">
    
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_weight="0.6">
            
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/iconimage"/>

            <TextView
                android:id="@+id/tripEstimateFareText"
                android:layout_margin="10dp"
                android:text="$200 - 250"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/uberBlack"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/uberAsh"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">
                
            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_height="25dp"
                android:layout_width="match_parent">
                
                <LinearLayout
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_height="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.4">

                    <ImageView
                        android:src="@mipmap/ic_wallet_action"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/uberAccentColor"/>

                    <TextView
                        android:text="Cash"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/uberBlack"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6">
                    
                    <TextView
                        android:text="25 mins"
                        android:id="@+id/newTripTimeText"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/uberBlack"
                        android:layout_marginLeft="5dp"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
			        android:id="@+id/requestDriverButton"
			        android:layout_width="match_parent"
			        android:layout_height="40dp"
			        android:text="Request Cab"
			        android:textAllCaps="false"
			        android:paddingLeft="10dp"
			        android:paddingRight="12dp"
			        android:paddingBottom="8dp"
			        android:paddingTop="8dp"
			        android:elevation="2dp"
			        android:translationZ="2dp"
			        android:background="@drawable/uberroundbutton"
			        android:textColor="@color/uberWhite"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>